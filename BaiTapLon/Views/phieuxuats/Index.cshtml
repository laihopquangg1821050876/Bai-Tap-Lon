@model IEnumerable<BaiTapLon.Models.phieuxuat>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="w3-center w3-text-blue" style=" font-family: Times New Roman; font-size:50px ">Phiếu xuất</h2>
@Styles.Render("~/Content/css")

<p>
    @Html.ActionLink("Tạo Mới Dữ Liệu", "Create")
</p>
<table class="w3-table-all w3-hoverable " style="font-family: Times New Roman; font-size:20px">
    <tr class="w3-blue-grey">
        <th>
            <label>Mã nhân viên</label>
        </th>
        <th>
            <label>Tên nhân viên</label>
        </th>
        <th>
            <label>ID Đơn hàng</label>
        </th>
        <th>
            <label>Tên sản phẩm</label>
        </th>
        <th>
            <label>Số lượng</label>
        </th>
        <th>
            <label>Thành tiền</label>
        </th>
        <th>
            <label>Ngày tạo</label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaNV)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenNV)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DonHangID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenHang)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Soluong)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.thanhtien)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Ngaytao)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.MaNV }) |
        @Html.ActionLink("Details", "Details", new { id = item.MaNV }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.MaNV })
    </td>
</tr>
    }

</table>
